<Bar Mode="BarMode.VerticalInline"
     CollapseMode="BarCollapseMode.Small"
     Breakpoint="Breakpoint.Desktop"
     NavigationBreakpoint="Breakpoint.Tablet"
     ThemeContrast="ThemeContrast.Light">

  <BarToggler Mode="BarTogglerMode.Popout"></BarToggler>
  <BarMenu>
    <BarStart>
      <BarItem>
        <BarLink To="/index">
          <BarIcon IconName="IconName.Home" />
          主页
        </BarLink>
      </BarItem>
      <BarItem>
        <BarLink To="/news">
          <BarIcon IconName="@("fa-newspaper")" />
          资讯
        </BarLink>
      </BarItem>
      <BarItem>
        <BarDropdown>
          <BarDropdownToggle>
            <BarIcon IconName="@("fa-toolbox")" />
            工具
          </BarDropdownToggle>
          <BarDropdownMenu>
            <BarDropdownItem To="/entity" Match="Match.All">
              <BarIcon IconName="@("fa-archive")" />
              实体构造
            </BarDropdownItem>
            <BarDropdownItem To="/codeSnippet" >
              <BarIcon IconName="@("fa-file-code")" />
              代码片段
            </BarDropdownItem>
          </BarDropdownMenu>
        </BarDropdown>
      </BarItem>
    </BarStart>
  </BarMenu>
</Bar>
